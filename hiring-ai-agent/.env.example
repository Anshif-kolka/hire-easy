# Hiring AI Agent - Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# GEMINI API (Required)
# =============================================================================
GEMINI_API_KEY=your_gemini_api_key_here

# Model configuration (optional - defaults shown)
# GEMINI_MODEL=gemini-1.5-flash
# GEMINI_EMBEDDING_MODEL=models/text-embedding-004

# =============================================================================
# DATABASE (Optional - defaults to local SQLite)
# =============================================================================
# DATABASE_PATH=data/hiring_agent.db

# =============================================================================
# CHROMADB VECTOR STORE (Optional - defaults shown)
# =============================================================================
# CHROMA_PERSIST_DIR=data/chroma_db
# CHROMA_COLLECTION_JOBS=job_contexts
# CHROMA_COLLECTION_CANDIDATES=candidates

# =============================================================================
# EMAIL INGESTION (Optional - for automatic resume collection)
# =============================================================================
# Set EMAIL_ENABLED=true to enable email polling
EMAIL_ENABLED=false

# Gmail IMAP settings (use App Password, not regular password)
# EMAIL_IMAP_SERVER=imap.gmail.com
# EMAIL_ADDRESS=your_email@gmail.com
# EMAIL_PASSWORD=your_gmail_app_password

# Email folder to monitor
# EMAIL_FOLDER=INBOX

# Subject pattern for job applications
# Format: JOB - {Job Title} - APPLICATION
# EMAIL_SUBJECT_PATTERN=^JOB\s*-\s*(.+?)\s*-\s*APPLICATION$

# How often to check for new emails (in minutes)
# EMAIL_POLL_INTERVAL_MINUTES=5

# =============================================================================
# FILE UPLOAD (Optional - defaults shown)
# =============================================================================
# UPLOAD_DIR=data/uploads
# MAX_FILE_SIZE_MB=10

# =============================================================================
# SCORING WEIGHTS (Optional - defaults shown, must sum to 1.0)
# =============================================================================
# WEIGHT_SEMANTIC_SIMILARITY=0.4
# WEIGHT_SKILL_MATCH=0.35
# WEIGHT_EXPERIENCE_MATCH=0.25

# =============================================================================
# APP SETTINGS (Optional)
# =============================================================================
# DEBUG=false
